<!DOCTYPE html>
<html>
  <head>
    <title>Salon</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="<%= people_path %>">Главная</a>
        </ul>
        <%= link_to 'Добавить персонал', new_person_path, class: 'btn btn-outline-primary pull-xs-right' %>
      </nav>
    </div>

    <div class="container main">
      <div class="row">
        <div class="col-md-12">
          <% flash.each do |name, message| %>
            <div class="aler alert-<%= name %>">
              <%= message %>
            </div>
          <% end %>
        </div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
